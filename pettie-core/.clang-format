Language: Cpp
Standard: c++17
BasedOnStyle:  LLVM
AllowShortFunctionsOnASingleLine: None
AlwaysBreakAfterDefinitionReturnType: None
AlwaysBreakAfterReturnType: None

BreakBeforeBraces: Custom
BraceWrapping:
  AfterControlStatement: true
  AfterFunction:    true
  AfterEnum:        true
  AfterStruct:      true
  AfterUnion:       true
  BeforeElse:       true
  AfterNamespace:   true
  AfterExternBlock: true
  AfterClass:       true
  BeforeLambdaBody: false
  SplitEmptyFunction: true

IndentWidth:         4
TabWidth:            4
MaxEmptyLinesToKeep: 2
PointerAlignment: Left
ReferenceAlignment: Left
UseTab:           Never
LineEnding:       LF

# Maximum line length ruler
ColumnLimit: 180

Cpp11BracedListStyle: false

# Splits "" and <> includes
IncludeBlocks: Regroup

# Enables aligning for consecutive macro definitions
AlignConsecutiveMacros: true

#
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveBitFields: Consecutive

#
AlignArrayOfStructures: Left
AlignAfterOpenBracket: Align
AlignOperands: true


# This is According to LLVM Coding Standard must be set to true
SpaceBeforeParens: ControlStatements

# Specifies the use of empty lines to separate definition blocks, including classes, structs, enums, and functions.
SeparateDefinitionBlocks: Always

# Disables any reformats of comments (can fix problems with Doxygen docs)
ReflowComments: false

# One-liner braces will be forced to multiple
AllowShortBlocksOnASingleLine: Never
AllowShortIfStatementsOnASingleLine: Never

# Conserve original author functions declarations
AllowAllConstructorInitializersOnNextLine: true
AllowAllParametersOfDeclarationOnNextLine: false
AllowAllArgumentsOnNextLine: false

BinPackArguments: false
BinPackParameters: false
ExperimentalAutoDetectBinPacking: false

BitFieldColonSpacing: After

BreakBeforeBinaryOperators: true
BreakConstructorInitializers: BeforeComma

AlwaysBreakTemplateDeclarations: Yes
IndentCaseLabels: true
IndentPPDirectives: AfterHash

NamespaceIndentation: All
AccessModifierOffset: -4

SpaceBeforeCpp11BracedList: false
